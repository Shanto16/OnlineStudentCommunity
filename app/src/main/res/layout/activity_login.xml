<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_login" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7d5b5b5b" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@string/app_name"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_marginBottom="60dp"
            android:background="@color/colorPrimaryDark" />


        <EditText
            android:id="@+id/log_et_email"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext"
            android:elevation="16dp"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/font_normal"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/log_et_password"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_edittext"
            android:elevation="16dp"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textColorHint="@color/font_normal"
            android:textSize="12sp" />


        <CheckBox
            android:id="@+id/log_cb_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@color/colorPrimary"
            android:text="Remember username and password"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <Button
            android:id="@+id/log_btn_login"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/save_trip"
            android:elevation="16dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Sign up"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />


    </LinearLayout>


</FrameLayout>